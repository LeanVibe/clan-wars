  "alerts": {
    "budget-exceeded": {
      "slack": {
        "enabled": true,
        "webhook": "${SLACK_WEBHOOK_URL}",
        "channel": "#deployments"
      },
      "github": {
        "enabled": true,
        "comment": true,
        "check": true
      }
    },
    "regression-detected": {
      "threshold": 10,
      "compareCount": 5,
      "slack": {
        "enabled": true
      }
    }
  },
  "monitoring": {
    "real-user-metrics": {
      "enabled": true,
      "sampleRate": 0.1
    },
    "synthetic-monitoring": {
      "enabled": true,
      "frequency": "hourly",
      "locations": ["us-east", "eu-west", "asia-pacific"]
    }
  }
